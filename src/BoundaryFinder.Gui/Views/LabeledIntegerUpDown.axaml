<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:BoundaryFinder.Gui.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BoundaryFinder.Gui.Views.LabeledIntegerUpDown"
             x:Name="Self">
    <StackPanel Orientation="Vertical">
        <TextBlock 
            Text="{Binding $parent[views:LabeledIntegerUpDown].Text}"/>
        <NumericUpDown
            Minimum="1"
            ParsingNumberStyle="Integer"
            FormatString="N0"
            HorizontalContentAlignment="Right"
            Increment="{Binding $parent[views:LabeledIntegerUpDown].Increment}"
            Value="{Binding $parent[views:LabeledIntegerUpDown].Value}"/>
    </StackPanel>
</UserControl>
