<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BoundaryFinder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BoundaryFinder.Views.MainWindow"
        x:CompileBindings="True"
        Icon="/Assets/avalonia-logo.ico"
        Title="Mandelbrot Set Boundary Finder"
        x:DataType="vm:MainWindowViewModel">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="2*,Auto,*">
        <TabControl Grid.Row="0">
            <TabControl.Styles>
                <Style Selector=":is(ContentControl)">
                    <Setter Property="Margin" Value="4" />
                </Style>
                <Style Selector="Label">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
                <Style Selector="NumericUpDown.integerInput">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Width" Value="300" />
                    <Setter Property="Increment" Value="1" />
                    <Setter Property="Minimum" Value="1" />
                    <Setter Property="ParsingNumberStyle" Value="Integer" />
                    <Setter Property="FormatString" Value="N0" />
                    <Setter Property="HorizontalContentAlignment" Value="Right" />
                </Style>
            </TabControl.Styles>

            <TabItem Header="Border Data">
                <Grid
                    RowDefinitions="Auto,*,Auto,Auto,Auto,Auto"
                    ColumnDefinitions="*,*">
                    <Button
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Content="Refresh List of Data Sets"
                        Command="{Binding BorderData.LoadDataSetsCommand}" />
                    <ListBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Items="{Binding BorderData.Boundaries}"
                        SelectedItem="{Binding BorderData.SelectedParameters}" />
                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Content="Load Boundary Set"
                        Command="{Binding BorderData.SelectDataSetCommand}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="{Binding BorderData.VerticalDivisions, StringFormat=Vertical Divisions: \{0:N0\}}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="{Binding BorderData.NumberOfRegions, StringFormat=Number of Regions: \{0:N0\}}" />
                    <Button
                        Grid.Row="4"
                        Grid.Column="0"
                        Content="Render Border Regions"
                        Command="{Binding BorderData.RenderBorderRegionsCommand}" />
                    <NumericUpDown
                        Grid.Row="4"
                        Grid.Column="1"
                        Classes="integerInput" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="0"
                        Content="Iteration Minimum:" />
                    <NumericUpDown
                        Grid.Row="5"
                        Grid.Column="1"
                        Classes="integerInput"
                        Increment="1000000"
                        Value="{Binding BorderData.MinimumIterations}" />

                </Grid>
            </TabItem>

            <TabItem Header="Calculate New Borders">
                <Grid
                    ColumnDefinitions="Auto,Auto,*"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Iteration Maximum:" />
                    <NumericUpDown
                        Grid.Row="0"
                        Grid.Column="1"
                        Classes="integerInput"
                        Increment="1000000"
                        Value="{Binding FindNewBoundary.MaximumIterations}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Vertical Divisions:" />
                    <NumericUpDown
                        Grid.Row="1"
                        Grid.Column="1"
                        Classes="integerInput"
                        Increment="1000"
                        Value="{Binding FindNewBoundary.VerticalDivisions}" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Scan Area Width:" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Text="{Binding FindNewBoundary.ScanAreaWidth, StringFormat=\{0:N10\}, Mode=OneWay}" />

                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Scan Area:" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Text="{Binding FindNewBoundary.ScanArea, StringFormat=\{0:N10\}, Mode=OneWay}" />

                    <Button
                        Grid.Row="4"
                        Grid.Column="0"
                        Content="Find Boundary"
                        Command="{Binding FindNewBoundary.FindBoundary}" />
                    <Button
                        Grid.Row="4"
                        Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding FindNewBoundary.CancelFindingBoundary}" />
                </Grid>
            </TabItem>

            <TabItem Header="Settings">
                <StackPanel Orientation="Vertical">
                    <TextBox IsReadOnly="True" Text="{Binding Settings.DataSetPath, Mode=OneWay}" />
                    <Button Content="Change File Path" Command="{Binding Settings.UpdateFilePathCommand}" />
                </StackPanel>
            </TabItem>

        </TabControl>

        <GridSplitter
            Grid.Row="1"
            ResizeDirection="Rows" />
        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            IsHitTestVisible="False"
            FontWeight="Bold"
            Content="· · ·"/>

        <TextBox
            Grid.Row="2"
            Margin="4"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalContentAlignment="Stretch"
            Text="{Binding LogOutput, Mode=OneWay}" />

    </Grid>
</Window>