<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BoundaryFinder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:BoundaryFinder.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BoundaryFinder.Views.MainWindow"
        x:CompileBindings="True"
        Icon="/Assets/avalonia-logo.ico"
        Title="Mandelbrot Set Boundary Finder"
        x:DataType="vm:MainWindowViewModel">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="2*,Auto,*">
        <TabControl Grid.Row="0">
            <TabControl.Styles>
                <Style Selector=":is(ContentControl)">
                    <Setter Property="Margin" Value="4" />
                </Style>
                <Style Selector="Label">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
                <Style Selector="NumericUpDown.integerInput">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Width" Value="300" />
                    <Setter Property="Increment" Value="1" />
                    <Setter Property="Minimum" Value="1" />
                    <Setter Property="ParsingNumberStyle" Value="Integer" />
                    <Setter Property="FormatString" Value="N0" />
                    <Setter Property="HorizontalContentAlignment" Value="Right" />
                </Style>
            </TabControl.Styles>

            <TabItem Header="Boundaries">
                <Grid
                    RowDefinitions="Auto,*,Auto,Auto,Auto,Auto"
                    ColumnDefinitions="*,*,*">
                    <Button
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Refresh List of Data Sets"
                        Command="{Binding Boundaries.LoadDataSetsCommand}" />
                    <Button
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="Load Boundary Set"
                        Command="{Binding Boundaries.SelectDataSetCommand}" />
                    <ListBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Items="{Binding Boundaries.Boundaries}"
                        SelectedItem="{Binding Boundaries.SelectedParameters}" />

                    <WrapPanel Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="0">
                        <TextBlock
                            VerticalAlignment="Center"
                            Text="{Binding Boundaries.VerticalDivisions, StringFormat=Vertical Divisions: \{0:N0\}}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Text="{Binding Boundaries.NumberOfRegions, StringFormat=Number of Regions: \{0:N0\}}" />
                        <views:LabeledIntegerUpDown 
                            Text="Iteration Minimum:"
                            Increment="1000000"
                            Value="{Binding Boundaries.MinimumIterations}" />
                    </WrapPanel>
                    
                    <Button
                        Grid.Row="3"
                        Grid.Column="2"
                        Content="Render Boundary"
                        Command="{Binding Boundaries.RenderBoundaryCommand}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Text="{Binding Boundaries.RegionImageSize, StringFormat=Region Image Size: \{0:N0\}}" />
                    <Slider
                        Grid.Row="4"
                        Grid.Column="1"
                        Minimum="1"
                        Maximum="20"
                        IsSnapToTickEnabled="True"
                        TickPlacement="BottomRight"
                        TickFrequency="1"
                        Value="{Binding Boundaries.RegionImageSizeMultiplier}"/>
                    
                    
                    <ProgressBar
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="4"
                        Minimum="0"
                        Maximum="{Binding Boundaries.NumRegionsToRender}"
                        Value="{Binding Boundaries.NumRegionsRendered}"/>
                    
                    <Button
                        Grid.Row="5"
                        Grid.Column="2"
                        Content="Render Region(s)"
                        Command="{Binding Boundaries.RenderRegionsCommand}" />
                    
                    
                </Grid>
            </TabItem>

            <TabItem Header="Calculate Boundary">
                <Grid
                    ColumnDefinitions="Auto,Auto,*"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Iteration Maximum:" />
                    <NumericUpDown
                        Grid.Row="0"
                        Grid.Column="1"
                        Classes="integerInput"
                        Increment="1000000"
                        Value="{Binding CalculateBoundary.MaximumIterations}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Vertical Divisions:" />
                    <NumericUpDown
                        Grid.Row="1"
                        Grid.Column="1"
                        Classes="integerInput"
                        Increment="1000"
                        Value="{Binding CalculateBoundary.VerticalDivisions}" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Scan Area Width:" />
                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Text="{Binding CalculateBoundary.ScanAreaWidth, StringFormat=\{0:N10\}, Mode=OneWay}" />

                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Scan Area:" />
                    <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        IsReadOnly="True"
                        Text="{Binding CalculateBoundary.ScanArea, StringFormat=\{0:N10\}, Mode=OneWay}" />

                    <Button
                        Grid.Row="4"
                        Grid.Column="0"
                        Content="Find Boundary"
                        Command="{Binding CalculateBoundary.FindBoundary}" />
                    <Button
                        Grid.Row="4"
                        Grid.Column="1"
                        Content="Cancel"
                        Command="{Binding CalculateBoundary.CancelFindingBoundary}" />
                </Grid>
            </TabItem>
            
            <TabItem Header="Visualize">
                
            </TabItem>

            <TabItem Header="Settings">
                <StackPanel Orientation="Vertical">
                    <TextBox IsReadOnly="True" Text="{Binding Settings.DataSetPath, Mode=OneWay}" />
                    <Button Content="Change File Path" Command="{Binding Settings.UpdateFilePathCommand}" />
                </StackPanel>
            </TabItem>

        </TabControl>

        <GridSplitter
            Grid.Row="1"
            ResizeDirection="Rows" />
        <Label
            Grid.Row="1"
            HorizontalAlignment="Center"
            IsHitTestVisible="False"
            FontWeight="Bold"
            Content="· · ·" />

        <TextBox
            Grid.Row="2"
            Margin="4"
            IsReadOnly="True"
            TextWrapping="Wrap"
            VerticalContentAlignment="Stretch"
            Text="{Binding LogOutput, Mode=OneWay}" />

    </Grid>
</Window>