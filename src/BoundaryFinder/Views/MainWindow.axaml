<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BoundaryFinder.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BoundaryFinder.Views.MainWindow"
        x:CompileBindings="True"
        Icon="/Assets/avalonia-logo.ico"
        Title="Mandelbrot Set Boundary Finder"
        x:DataType="vm:MainWindowViewModel">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <TabControl>
        <TabControl.Styles>
            <Style Selector=":is(ContentControl)">
                <Setter Property="Margin" Value="4" />
            </Style>
            <Style Selector="Label">
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
            <Style Selector="NumericUpDown.integerInput">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Width" Value="300" />
                <Setter Property="Increment" Value="1" />
                <Setter Property="Minimum" Value="1" />
                <Setter Property="ParsingNumberStyle" Value="Integer" />
                <Setter Property="FormatString" Value="N0" />
                <Setter Property="HorizontalContentAlignment" Value="Right" />
            </Style>
        </TabControl.Styles>

        <TabItem Header="Data Source">
            <StackPanel Orientation="Vertical">
                <Expander Header="Options">
                    <TextBox IsReadOnly="True" Text="{Binding DataSource.DataSetPath, Mode=OneWay}" />
                </Expander>
                <Button Content="Load Data Source" Command="{Binding DataSource.LoadFileData}" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Border Data">
            <StackPanel Orientation="Vertical">
                <Button Content="Refresh List of Data Sets" Command="{Binding BorderData.LoadDataSets}" />
                <ListBox Items="{Binding BorderData.Boundaries}" />
                <Button Content="Load Boundary Set" />
            </StackPanel>
        </TabItem>

        <TabItem Header="Calculate New Borders">
            <Grid
                ColumnDefinitions="Auto,Auto,*"
                RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Iteration Minimum:" />
                <NumericUpDown
                    Grid.Row="0"
                    Grid.Column="1"
                    Classes="integerInput"
                    Value="{Binding FindNewBoundary.MinimumIterations}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Iteration Maximum:" />
                <NumericUpDown
                    Grid.Row="1"
                    Grid.Column="1"
                    Classes="integerInput"
                    Value="{Binding FindNewBoundary.MaximumIterations}" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Vertical Divisions:" />
                <NumericUpDown
                    Grid.Row="2"
                    Grid.Column="1"
                    Classes="integerInput"
                    Value="{Binding FindNewBoundary.VerticalDivisions}" />

                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Scan Area Width:" />
                <TextBox
                    Grid.Row="3"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Text="{Binding FindNewBoundary.ScanAreaWidth, StringFormat=\{0:N10\}, Mode=OneWay}" />

                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Scan Area:" />
                <TextBox
                    Grid.Row="4"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Text="{Binding FindNewBoundary.ScanArea, StringFormat=\{0:N10\}, Mode=OneWay}" />

                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="Border Areas Found:" />
                <TextBox
                    Grid.Row="5"
                    Grid.Column="1"
                    IsReadOnly="True"
                    Text="{Binding FindNewBoundary.NumBorderAreasFound, StringFormat=\{0:N0\}, Mode=OneWay}" />

                <Button
                    Grid.Row="6"
                    Grid.Column="0"
                    Content="Find Boundary"
                    Command="{Binding FindNewBoundary.FindBoundary}" />
                <Button
                    Grid.Row="6"
                    Grid.Column="1"
                    Content="Cancel"
                    Command="{Binding FindNewBoundary.CancelFindingBoundary}" />

                <TextBox
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    IsReadOnly="True"
                    TextWrapping="Wrap"
                    VerticalContentAlignment="Stretch"
                    Text="{Binding FindNewBoundary.Output, Mode=OneWay}" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>